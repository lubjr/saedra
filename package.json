{
  "name": "saedra",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e .env -- turbo run dev --concurrency=20",
    "dev:infra": "sudo docker-compose -f docker/docker-compose.yml up -d",
    "stop:infra": "sudo docker-compose -f docker/docker-compose.yml down",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "dotenv-cli": "^7.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
